<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF5F2"
    tools:context=".TextCheckActivity">

    <!-- 返回箭頭 -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="返回"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 標題 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="文字辨識"
        android:textColor="#227D60"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backArrow" />

    <!-- 輸入區標籤 icon -->
    <ImageView
        android:id="@+id/textIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:contentDescription="文字圖示"
        android:src="@drawable/ic_text"
        app:tint="#227D60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <!-- 輸入區標籤文字 -->
    <TextView
        android:id="@+id/topLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="24dp"
        android:text="內容"
        android:textColor="#227D60"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textIcon"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <!-- 文字輸入框（多行） -->
    <EditText
        android:id="@+id/textInput"
        android:layout_width="330dp"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_url_input"
        android:hint="請輸入或貼上可疑訊息內容"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLabelText" />

    <!-- 開始辨識 -->
    <Button
        android:id="@+id/startCheckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FF8000"
        android:text="開始辨識"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInput" />

    <!-- 判別結果 icon -->
    <ImageView
        android:id="@+id/fileIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="13dp"
        android:contentDescription="結果圖示"
        android:src="@drawable/ic_file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startCheckButton" />

    <!-- 判別結果文字 -->
    <TextView
        android:id="@+id/resultLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="13dp"
        android:text="判別結果"
        android:textColor="#227D60"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fileIcon"
        app:layout_constraintTop_toBottomOf="@+id/startCheckButton" />

    <!-- 結果顯示框 -->
    <FrameLayout
        android:id="@+id/resultContainer"
        android:layout_width="330dp"
        android:layout_height="260dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_outer_white_box"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultLabelText">

        <!-- 綠框背景 -->
        <View
            android:id="@+id/greenBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_inner_green_box" />

        <!-- 可垂直滑動的文字區塊 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="（尚未辨識）"
                android:textColor="#227D60"
                android:textSize="20sp" />
        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
