<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fp2">

    <!-- 網路權限：連線到 urlscan.io 與本機/雲端後端 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FP"
        android:usesCleartextTraffic="true">

        <!-- 無 intent-filter 的 Activity 不需設定 exported -->
        <activity android:name=".activity_privacy_dialog" />
        <activity android:name=".CallRecordSettingActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".UrlCheckActivity" />
        <activity android:name=".AudioRecognitionActivity" />
        <activity android:name=".ResultActivity" />
        <activity android:name=".ScreenshotActivity" />
        <activity android:name=".TextCheckActivity" />


        <!-- 啟動頁（有 intent-filter 必須設 exported="true"） -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HistoryActivity" />
        <activity android:name=".HistoryDetailActivity" />

    </application>
</manifest>
